<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppTesteBinding.View.MenuPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fontawesome="clr-namespace:FontAwesome"
    xmlns:viewmodels="clr-namespace:AppTesteBinding.ViewModels"
    Appearing="ContentPage_Appearing"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewmodels:MenuPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <ffimageloading:CachedImage Aspect="AspectFill" Source="maragogifundo" />

            <Grid
                ColumnSpacing="0"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                       Property=Height}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                      Property=Width}"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ffimageloading:CachedImage
                    Grid.Row="0"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"
                    Source="iconeprincipal"
                    VerticalOptions="Center" />

                <Label
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    HorizontalOptions="Center"
                    Style="{StaticResource HammerFatLargeBranco}"
                    Text="{Binding Displaymessage}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />

                <Frame
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,5,10,5"
                    Padding="10"
                    BackgroundColor="SkyBlue"
                    HorizontalOptions="End"
                    VerticalOptions="Center">
                    <Grid>
                        <Button
                            Grid.Row="0"
                            Command="{Binding CmdNavigation}"
                            CommandParameter="PageInformacao"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.Info}" />
                        <Button
                            Grid.Row="1"
                            Clicked="ImageButton_ClickedAsync"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.Share}" />
                        <Button
                            Grid.Row="2"
                            Command="{Binding CmdNavigation}"
                            CommandParameter="PageLocalizacao"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.MapMarkedAlt}" />
                        <Button
                            Grid.Row="3"
                            Command="{Binding CmdLigar}"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.Phone}" />
                        <Button
                            Grid.Row="4"
                            Command="{Binding CmdNavigation}"
                            CommandParameter="PageAeroporto"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.Plane}" />
                        <Button
                            Grid.Row="4"
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Config"
                            Style="{StaticResource ButtonIconeBrancoFill}"
                            Text="{x:Static fontawesome:FontAwesomeIcons.Cogs}" />
                    </Grid>
                </Frame>
            </Grid>

            <BoxView
                Grid.Row="1"
                HeightRequest="3"
                HorizontalOptions="FillAndExpand"
                Color="#3E4095" />

            <Grid
                Grid.Row="2"
                Margin="5"
                VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--  COMER  -->
                <ffimageloading:CachedImage
                    x:Name="imgComer"
                    Grid.Row="0"
                    Grid.Column="0"
                    Source="menucomer">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Comer"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>

                <Label
                    x:Name="Comer"
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource lblGridMenu}" />

                <!--  DORMIR  -->
                <ffimageloading:CachedImage
                    x:Name="imgDormir"
                    Grid.Row="0"
                    Grid.Column="1"
                    Source="menudormir"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Dormir"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>

                <Label
                    x:Name="Dormir"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource lblGridMenu}" />

                <!--  LOCOMOVER  -->
                <ffimageloading:CachedImage
                    x:Name="imgLocomover"
                    Grid.Row="0"
                    Grid.Column="2"
                    Source="menulocomover"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Locomover"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Locomover"
                    Grid.Row="1"
                    Grid.Column="2"
                    Style="{StaticResource lblGridMenu}" />

                <!--  DIVERSÃO  -->
                <ffimageloading:CachedImage
                    x:Name="imgDiversao"
                    Grid.Row="2"
                    Grid.Column="0"
                    Source="menudiversao"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Diversão"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Diversao"
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource lblGridMenu}" />

                <!--  COMPRAR  -->
                <ffimageloading:CachedImage
                    x:Name="imgComprar"
                    Grid.Row="2"
                    Grid.Column="1"
                    Source="menucomprar"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Comprar"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Comprar"
                    Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource lblGridMenu}" />

                <!--  BELEZA  -->
                <ffimageloading:CachedImage
                    x:Name="imgBeleza"
                    Grid.Row="2"
                    Grid.Column="2"
                    Source="menubeleza"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Beleza"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Beleza"
                    Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource lblGridMenu}" />

                <!--  SAUDE  -->
                <ffimageloading:CachedImage
                    x:Name="imgSaude"
                    Grid.Row="4"
                    Grid.Column="0"
                    Source="menusaude"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Saúde"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Saude"
                    Grid.Row="5"
                    Grid.Column="0"
                    Style="{StaticResource lblGridMenu}" />

                <!--  SERVICOS  -->
                <ffimageloading:CachedImage
                    x:Name="imgServicos"
                    Grid.Row="4"
                    Grid.Column="1"
                    Source="menuservicos"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Serviços"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Servicos"
                    Grid.Row="5"
                    Grid.Column="1"
                    Style="{StaticResource lblGridMenu}" />

                <!--  EVENTOS  -->
                <ffimageloading:CachedImage
                    x:Name="imgEventos"
                    Grid.Row="4"
                    Grid.Column="2"
                    Source="menuevento"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Eventos"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Eventos"
                    Grid.Row="5"
                    Grid.Column="2"
                    Style="{StaticResource lblGridMenu}" />

                <!--  PASSEIOS  -->
                <ffimageloading:CachedImage
                    x:Name="imgPasseios"
                    Grid.Row="6"
                    Grid.Column="0"
                    Source="menupasseios"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Passeios"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    x:Name="Passeios"
                    Grid.Row="7"
                    Grid.Column="0"
                    Style="{StaticResource lblGridMenu}" />

                <!--  MARAGOGI  -->
                <ffimageloading:CachedImage
                    x:Name="imgMaragogi"
                    Grid.Row="6"
                    Grid.Column="1"
                    Source="menumaragogi"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="Maragogi"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    Grid.Row="7"
                    Grid.Column="1"
                    Style="{StaticResource lblGridMenu}"
                    Text="MARAGOGI" />

                <!--  TRTECNOLOGIAS  -->
                <ffimageloading:CachedImage
                    x:Name="TrTecnologias"
                    Grid.Row="6"
                    Grid.Column="2"
                    Source="menutrtecnologia"
                    Style="{StaticResource imgPrimeiroMenu}">
                    <ffimageloading:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CmdNavigation}"
                            CommandParameter="TrTecnologias"
                            NumberOfTapsRequired="1" />
                    </ffimageloading:CachedImage.GestureRecognizers>
                </ffimageloading:CachedImage>
                <Label
                    Grid.Row="7"
                    Grid.Column="2"
                    Style="{StaticResource lblGridMenu}"
                    Text="TRTECNOLOGIA" />

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>